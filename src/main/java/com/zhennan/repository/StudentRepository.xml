<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhennan.repository.StudentRepository">
    <resultMap id="studentMapLazy" type="com.zhennan.entity.Student">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <association property="classes" javaType="com.zhennan.entity.Classes"
                     select="com.zhennan.repository.ClassesRepository.findById" column="cid">
        </association>
    </resultMap>
    <select id="findByIdLazy" parameterType="long" resultMap="studentMapLazy">
        select * from student where id = #{id}
    </select>

</mapper>